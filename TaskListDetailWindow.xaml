<Window x:Class="TodoListApp.TaskListDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TodoListApp"
        Title="Danh sách công việc" Height="400" Width="600">

    <Window.Resources>
        <local:PriorityToBackgroundConverter x:Key="PriorityToBackground"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nút XEM -->
            <RowDefinition Height="*"/>
            <!-- ListBox -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Các công việc trong ngày:" FontWeight="Bold" Margin="0,0,0,10"/>
            <!-- Thêm nút XEM -->
            <Button x:Name="ViewOnMainButton" Content="XEM TRÊN GIAO DIỆN CHÍNH" Click="ViewOnMainButton_Click" Margin="0,0,0,10" Padding="10,5"/>
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding}" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5" CornerRadius="4" Background="{Binding Priority, Converter={StaticResource PriorityToBackground}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="10"/>
                            <TextBlock Text="{Binding FormattedDeadline}" FontSize="10" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding PriorityText}" FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>